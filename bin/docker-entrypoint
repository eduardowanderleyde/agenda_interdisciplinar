#!/usr/bin/env bash
set -e

# Remove a potentially pre-existing server.pid for Rails.
rm -f /rails/tmp/pids/server.pid

# If running the rails server then create or migrate existing database
if [ "${1}" == "./bin/rails" ] && [ "${2}" == "server" ]; then
  # Only run db:prepare if DATABASE_URL is available
  if [ -n "$DATABASE_URL" ]; then
    echo "DATABASE_URL found, preparing database..."
    ./bin/rails db:prepare
    
    # Also run migrations to ensure database is up to date
    echo "Running migrations..."
    ./bin/rails db:migrate
  else
    echo "No DATABASE_URL found, skipping database preparation..."
  fi
  
  # Skip assets compilation for now to get deploy working
  echo "Skipping assets compilation for now..."
  # ./bin/rails assets:precompile
fi

# Then exec the container's main process (what's set as CMD in the Dockerfile).
exec "$@"
