<div class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-2xl mx-auto">
    <% if notice %>
      <div class="mb-6 p-4 rounded bg-green-100 text-green-800 text-center font-semibold shadow">
        <%= notice %>
      </div>
    <% end %>

    <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
      <h1 class="text-2xl font-bold text-indigo-900 mb-6 text-center">Detalhes do Agendamento</h1>
      <%= render @appointment %>
      <div class="flex flex-wrap gap-4 justify-center mt-8">
        <%= link_to 'Editar', edit_appointment_path(@appointment), class: 'bg-blue-600 text-white px-5 py-2 rounded shadow hover:bg-blue-700 transition font-semibold' %>
        <%= link_to 'Voltar para agendamentos', appointments_path, class: 'bg-gray-200 text-gray-800 px-5 py-2 rounded shadow hover:bg-gray-300 transition font-semibold' %>
        <%= button_to 'Excluir agendamento', @appointment, method: :delete, data: { confirm: 'Tem certeza que deseja excluir este agendamento?' }, class: 'bg-red-600 text-white px-5 py-2 rounded shadow hover:bg-red-700 transition font-semibold' %>
      </div>
    </div>
  </div>
</div>
