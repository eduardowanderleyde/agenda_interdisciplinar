<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-700 via-purple-600 to-blue-400 py-20 px-6">
  <div class="w-full max-w-xl bg-white/90 rounded-3xl shadow-2xl border border-white/20 p-10 space-y-8">

    <% if notice %>
      <div class="bg-green-100 text-green-800 font-medium px-4 py-3 rounded-lg shadow text-center">
        <%= notice %>
      </div>
    <% end %>

    <h1 class="text-3xl font-bold text-center text-indigo-700 drop-shadow">Detalhes do Agendamento</h1>

    <div class="bg-white border border-indigo-100 rounded-xl p-6 shadow-sm text-gray-800 space-y-2">
      <p><strong>Paciente:</strong> <%= @appointment.patient.name %></p>
      <p><strong>Profissional:</strong> <%= @appointment.professional.name %></p>
      <p><strong>Área:</strong> <%= @appointment.specialty.name %></p>
      <p><strong>Sala:</strong> <%= @appointment.room.name %></p>
      <p><strong>Data:</strong> <%= l(@appointment.start_time, format: "%d/%m/%Y") %></p>
      <p><strong>Horário:</strong> <%= @appointment.start_time.strftime("%H:%M") %> — <%= @appointment.duration %> min</p>
    </div>

    <div class="flex flex-col sm:flex-row justify-center gap-4 pt-2">
      <%= link_to 'Editar', edit_appointment_path(@appointment),
        class: 'bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-xl font-semibold text-center shadow-sm' %>

      <%= link_to 'Voltar para agendamentos', appointments_path,
        class: 'bg-gray-100 hover:bg-gray-200 text-gray-800 px-6 py-3 rounded-xl font-semibold text-center shadow-sm' %>

      <%= button_to 'Excluir agendamento', @appointment, method: :delete,
        data: { confirm: 'Tem certeza que deseja excluir este agendamento?' },
        class: 'bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-xl font-semibold text-center shadow-sm' %>
    </div>

  </div>
</div>
