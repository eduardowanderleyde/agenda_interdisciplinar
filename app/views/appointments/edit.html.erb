<h1>Editing appointment</h1>

<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-lg relative">
      <h2 class="text-xl font-bold mb-4">Editar Agendamento</h2>
      <%= render 'form', appointment: @appointment %>
      <button data-action="click->modal#close" class="absolute top-2 right-2 text-gray-400 hover:text-gray-700">&times;</button>
    </div>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this appointment", @appointment %> |
  <%= link_to "Back to appointments", appointments_path %>
</div>
