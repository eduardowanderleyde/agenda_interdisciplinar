<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-700 via-purple-600 to-blue-400 py-12 px-4">
  <div class="w-full max-w-2xl mx-auto">
    <% if notice %>
      <div class="mb-6 p-4 rounded bg-green-100 text-green-800 text-center font-semibold shadow">
        <%= notice %>
      </div>
    <% end %>

    <div class="bg-white/90 rounded-3xl shadow-2xl p-10 mb-8 border border-white/30">
      <h1 class="text-3xl font-extrabold text-center text-indigo-700 mb-8 drop-shadow">Editar Agendamento</h1>
      <%= render 'form', appointment: @appointment %>
      <div class="text-center mt-6">
        <%= link_to 'Voltar para agendamentos', appointments_path, class: 'text-indigo-700 font-bold hover:underline' %>
      </div>
    </div>
  </div>
</div>
