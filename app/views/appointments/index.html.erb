<div class="min-h-screen bg-gradient-to-br from-indigo-700 via-purple-600 to-pink-400 py-16 px-4">
  <div class="max-w-7xl mx-auto">
    <p style="color: green"><%= notice %></p>

    <!-- Formul√°rio de novo agendamento -->
    <div class="max-w-2xl mx-auto mb-10 p-8 bg-white rounded-2xl shadow-xl border border-indigo-100">

      <%= render 'form', appointment: @appointment || Appointment.new %>
    </div>

    <div class="bg-white shadow-xl rounded-2xl p-8 mb-8">
      <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
        <h1 class="text-4xl font-bold text-indigo-900">Agendamentos</h1>
        <%= link_to new_appointment_path, class: "flex items-center gap-2 bg-indigo-700 text-white px-8 py-4 rounded-xl shadow-md hover:bg-indigo-800 transition duration-300 text-lg" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          Novo agendamento
        <% end %>
      </div>

      <div class="bg-indigo-50 rounded-xl p-6 mb-8 border border-indigo-100">
        <%= form_with url: appointments_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6" do |f| %>
          <div class="space-y-2">
            <%= f.label :professional_id, "Profissional", class: "block text-base font-semibold text-indigo-900" %>
            <%= f.select :professional_id, 
                options_from_collection_for_select(Professional.all, :id, :name, params[:professional_id]), 
                { include_blank: "Todos" }, 
                class: "w-full rounded-lg border-indigo-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base bg-white" %>
          </div>
          <div class="space-y-2">
            <%= f.label :patient_id, "Paciente", class: "block text-base font-semibold text-indigo-900" %>
            <%= f.select :patient_id, 
                options_from_collection_for_select(Patient.all, :id, :name, params[:patient_id]), 
                { include_blank: "Todos" }, 
                class: "w-full rounded-lg border-indigo-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base bg-white" %>
          </div>
          <div class="space-y-2">
            <%= f.label :room_id, "Sala", class: "block text-base font-semibold text-indigo-900" %>
            <%= f.select :room_id, 
                options_from_collection_for_select(Room.all, :id, :name, params[:room_id]), 
                { include_blank: "Todas" }, 
                class: "w-full rounded-lg border-indigo-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base bg-white" %>
          </div>
          <div class="space-y-2">
            <%= f.label :date, "Data", class: "block text-base font-semibold text-indigo-900" %>
            <%= f.date_field :date, 
                value: params[:date], 
                class: "w-full rounded-lg border-indigo-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base bg-white" %>
          </div>
          <div class="flex items-end">
            <%= f.submit "Filtrar", 
                class: "w-full bg-indigo-700 text-white px-6 py-3 rounded-lg hover:bg-indigo-800 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-300 text-base font-medium" %>
          </div>
        <% end %>
      </div>
<div id="appointments" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
  <% if @appointments.any? %>
    <% @appointments.each do |appointment| %>
      <div class="bg-white rounded-2xl shadow-md border border-indigo-100 hover:shadow-xl transition duration-300 p-6 space-y-3">
        <div>
          <p class="text-lg font-bold text-indigo-800"><%= appointment.patient.name %></p>
          <p class="text-gray-700">
            Profissional: <%= appointment.professional.name %><br>
            √Årea: <%= appointment.specialty&.name || "‚Äî" %><br>
            Sala: <%= appointment.room.name %><br>
            <%= appointment.start_time.strftime('%d/%m √†s %H:%M') %> - <%= appointment.duration %> min
          </p>
        </div>

        <div class="flex gap-2 mt-4">
          <%= link_to "üîç Detalhes", appointment_path(appointment),
            class: "text-white bg-blue-600 hover:bg-blue-700 px-3 py-2 rounded-lg text-sm font-semibold" %>
          <%= link_to "‚úèÔ∏è Editar", edit_appointment_path(appointment),
            class: "text-white bg-indigo-500 hover:bg-indigo-600 px-3 py-2 rounded-lg text-sm font-semibold" %>
          <%= link_to "‚ùå Deletar", appointment_path(appointment),
            method: :delete,
            data: { confirm: "Tem certeza que deseja excluir este agendamento?" },
            class: "text-white bg-red-500 hover:bg-red-600 px-3 py-2 rounded-lg text-sm font-semibold" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-span-full flex flex-col items-center justify-center py-16">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-indigo-200 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <p class="text-lg text-indigo-400 font-semibold">Nenhum agendamento encontrado para os filtros selecionados.</p>
    </div>
  <% end %>
</div>
