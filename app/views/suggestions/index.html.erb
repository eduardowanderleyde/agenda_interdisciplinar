<div class="max-w-6xl mx-auto py-8">
  <!-- Metade de cima: Sugestões para o paciente -->
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h2 class="text-2xl font-bold mb-4">Sugestões de Horários por Paciente</h2>
    <div data-controller="suggestion">
      <div class="flex flex-wrap gap-4 items-end mb-6">
        <div>
          <label class="block font-semibold mb-1">Paciente</label>
          <select data-action="change->suggestion#updateDias" data-suggestion-target="paciente" class="form-select rounded border-gray-300 text-gray-800 bg-white">
            <option value="">Selecione o paciente</option>
            <% @patients.each do |p| %>
              <option value="<%= p.id %>"><%= p.name %></option>
            <% end %>
          </select>
        </div>
        <div>
          <label class="block font-semibold mb-1">Dia</label>
          <input type="date"
                 data-action="change->suggestion#updateHorarios"
                 data-suggestion-target="dia"
                 class="form-input rounded border-gray-300 text-gray-800 bg-white"
                 min="<%= Date.today %>">
        </div>
        <div>
          <label class="block font-semibold mb-1">Horário</label>
          <select data-action="change->suggestion#updateEspecialidades" data-suggestion-target="horario" class="form-select rounded border-gray-300 text-gray-800 bg-white" disabled>
            <option value="">Selecione o horário</option>
            <!-- opções preenchidas via JS -->
          </select>
        </div>
        <div>
          <label class="block font-semibold mb-1">Especialidade</label>
          <select data-suggestion-target="especialidade" class="form-select rounded border-gray-300 text-gray-800 bg-white" disabled>
            <option value="">Selecione a especialidade</option>
            <!-- opções preenchidas via JS -->
          </select>
        </div>
        <div class="flex items-end h-full">
          <button type="button" data-action="click->suggestion#buscarSugestoes" data-suggestion-target="buscar" class="btn btn-primary ml-2" disabled>Buscar</button>
        </div>
      </div>
      <div data-suggestion-target="sugestoes" class="mt-6">
        <!-- sugestões de profissionais e salas aparecem aqui -->
      </div>
    </div>
  </div>

  <!-- Metade de baixo: Sugestões para profissionais -->
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-2xl font-bold mb-4">Sugestões de Pacientes por Profissional</h2>
    <div class="flex flex-wrap gap-4 items-end mb-6">
      <div>
        <label for="specialty_prof" class="block font-semibold mb-1">Especialidade</label>
        <%= form_with url: suggestions_path, method: :get, local: true do |f| %>
          <%= select_tag :specialty_prof, options_from_collection_for_select(@specialties, :id, :name, params[:specialty_prof]), prompt: 'Todas especialidades', class: 'form-select rounded border-gray-300' %>
          <%= submit_tag 'Filtrar', class: 'btn btn-primary ml-2' %>
        <% end %>
      </div>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full text-sm text-center border">
        <thead>
          <tr>
            <th class="p-2 border">Profissional</th>
            <th class="p-2 border">Especialidades</th>
            <th class="p-2 border">Sugestões de Pacientes e Horários</th>
          </tr>
        </thead>
        <tbody>
          <% Professional.includes(:specialties).each do |prof| %>
            <% next if params[:specialty_prof].present? && !prof.specialty_ids.include?(params[:specialty_prof].to_i) %>
            <tr>
              <td class="p-2 border font-semibold"><%= prof.name %></td>
              <td class="p-2 border">
                <% prof.specialties.each do |spec| %>
                  <span class="inline-block bg-blue-100 text-blue-800 rounded px-2 py-1 text-xs mr-1"><%= spec.name %></span>
                <% end %>
              </td>
              <td class="p-2 border">
                <!-- Aqui pode ser evoluído para mostrar sugestões reais cruzando horários livres do profissional, pacientes e salas -->
                <span class="text-gray-400">(Em breve: sugestões detalhadas)</span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div> 