  # Use RSpec for testing [https://github.com/rspec/rspec-rails]
  gem 'rspec-rails'

  # Use Bullet for N+1 query detection [https://github.com/flyerhzm/bullet]
  gem 'bullet'

  # Use RuboCop for code linting [https://github.com/rubocop/rubocop]
